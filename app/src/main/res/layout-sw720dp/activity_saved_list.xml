<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SavedList">

    <ListView
        android:id="@+id/SL_ListOfImages"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@id/SL_ToJokesButton"/>

    <Button
        android:id="@+id/SL_ToJokesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jokes_page"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/SL_SaveImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_image"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@id/SL_ListOfImages"/>

    <FrameLayout
        android:id="@+id/fragmentLocation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/SL_ListOfImages" />

</RelativeLayout>